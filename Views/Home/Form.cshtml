@{
    ViewBag.Title = "Submit Recommendation";
}

@model Restaurants

<!-- Masthead-->
<header class="masthead">
    <div class="container h-100">
        <div class="row h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-10 align-self-end">
                <h1 class="text-uppercase text-white font-weight-bold">Form</h1>
                <hr class="divider my-4" />
            </div>
            <div class="col-lg-8 align-self-baseline">
                <form method="post" asp-action="Form">
                    <div>
                        <div>
                            <label asp-for="Name">Your Name: </label>
                            <input asp-for="Name" />
                        </div><br />
                        <div>
                            <label asp-for="Rest">Restaurant Name: </label>
                            <input asp-for="Rest" />
                        </div><br />
                        <div>
                            <label asp-for="Dish">Recommended Dish: </label>
                            <input asp-for="Dish" />
                        </div><br />
                        <div>
                            <label asp-for="Phone">Restaurant Phone: </label>
                            <input asp-for="Phone" />
                        </div> <br />
                        <button class="btn btn-primary" type="submit">Submit Recommendation</button>
                        <div asp-validation-summary="All"></div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</header>