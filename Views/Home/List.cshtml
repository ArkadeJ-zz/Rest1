@{
    ViewBag.Title = "Restaurant List";
}
@model IEnumerable<Restaurants>;

<!-- Masthead-->
<header class="masthead">
    <div class="container h-100">
        <div class="row h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-10 align-self-end">
                <h1 class="text-uppercase text-white font-weight-bold">List</h1>
                <hr class="divider my-4" />
            </div>
            <div class="col-lg-8 align-self-baseline">
                <table>
                    <thead>
                        <tr><th>Name</th><th>Restaurant Name</th><th>Recommended Dish</th><th>Restaurant Phone</th>
                    </thead>
                    <tbody>
                        @foreach (Restaurants x in Model)
                        {
                            <tr>
                                <td>@x.Name</td>
                                <td>@x.Rest</td>
                                <td>@x.Dish</td>
                                <td>@x.Phone</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</header>